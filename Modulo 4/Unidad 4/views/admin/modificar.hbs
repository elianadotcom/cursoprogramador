<div class="container" style="margin:100px 0">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar un Comentario</h4>
            <form action="/admin/novedades/modificar" method="post">
            <input type="hidden" value="{{novedad.id}}" name="id">
            <div class="form-group">
                <label for="">Titular</label>
                <input type="text" class="form-control" name="titular" value="{{novedad.titular}}">
            </div>
            <div class="form-group">
                <label for="">Comentarios</label>
                <textarea name="comentarios" class="form-control">{{novedad.comentarios}}</textarea>
            </div>
            <button type="submit" class="btn btn-secondary">Modificar</button>         
            </form>
        {{#if error}}
            <p>{{message}}</p>
        {{/if}}
        </div>
    </div>
</div>