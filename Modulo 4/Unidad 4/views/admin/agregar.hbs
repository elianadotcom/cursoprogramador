<div class="container" style="margin:100px 0">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar un Comentario</h4>
            <form action="/admin/novedades/agregar" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <input type="text" class="form-control"
                placeholder="Titular" name="titular">
            </div>
            <div class="form-group">
                <label>Imagen: <input type="file" name="imagen" id="imagen" /></label>
            </div>
            <div class="form-group">
                <textarea type="text" class="form-control"
                placeholder="Comentarios" name="comentarios"></textarea>
            </div>
            <button type="submit" class="btn btn-secondary">Guardar</button>         
            </form>
            {{#if error}}
            <h5>{{message}}</h5>
            {{/if}}
        </div>
    </div>
</div>