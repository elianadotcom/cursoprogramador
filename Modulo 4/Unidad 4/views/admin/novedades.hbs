<div class="container" style="margin-top: 100px;">
    {{!-- fila 1 --}}
    <div class="row">
        <div class="col">
            <p class="text-right">
                <span>Hola {{usuario}}!</span>
                <a href="/admin/login/logout" class="btn btn-danger">Cerrar sesión <i class="fas fa-sign-out-alt"></i><a>
            </p>
        </div>
    </div>
    {{!-- fin fila 1 --}}

    {{!-- fila 2 --}}
    <div class="row">
        <div class="col-4" style="margin: top -10px;">
            <h2>Comentarios</h2>
        </div>
        <div class="col-9 text-right">
            <a href="/admin/novedades/agregar" class="btn btn-secondary"> <i class="fas fa plus"></i>+ Nuevo Comentario</a>
        </div>
    </div>
    {{!-- fin fila 2 --}}

    {{!-- fila 3 --}}
    <div class="row">
        <div class="col">
            <table class="table">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">N°</th>
                        <th scope="col">Titular</th>
                        <th scope="col">Comentarios</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titular}}</td>
                            <td>{{comentarios}}</td>
                        <td class="text-right">
                            <a href="/admin/novedades/modificar/{{id}}" title="Editar" class="btn btn-secondary"><i class="fas fa-pencil-alt"></i></a>
                            <a href="/admin/novedades/eliminar/{{id}}" title="Eliminar" class="btn btn-secondary"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    {{!-- fin fila 3 --}}
</div>